@using MvcKutuphane.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    //string renk = "";
}
<div style="margin-top:15px"></div>
<h2>Duyurular</h2>
<hr />
<div style="margin-top:15px"></div>
<table class="table table-bordered table-striped">
    <tr style="background-color:#e6e6fa">
        <th>DUYURU NO</th>
        <th>KONU</th>
        <th>TARİH</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var dyr in Model)
    {
        <tr>
            <td>@dyr.ID</td>
            <td>@dyr.KONU</td>
            <td>@Convert.ToDateTime(dyr.TARIH).ToString("dd/MM/yyyy")</td>
            <td><a href="/Duyuru/DuyuruSil/@dyr.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Duyuru/DuyuruDetay/@dyr.ID" class="btn btn-warning text-white">Detaylar</a></td>
        </tr>
    }
</table>
<div style="margin-top:15px">
    <a href="/Duyuru/YeniDuyuru/" class="btn btn-primary">Yeni Duyuru Ekle</a>
</div>

