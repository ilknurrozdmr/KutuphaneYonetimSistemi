@model MvcKutuphane.Models.Entity.TBLDUYURULAR
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div style="margin-top:15px"></div>
<h2>Duyuru Detayları</h2>
<hr />
<div style="margin-top:15px"></div>
@using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label><b>DUYURU ID</b></label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label><b>KONU</b></label>
        @Html.TextAreaFor(k => k.KONU, new { @class = "form-control" })
        <br />
        <label><b>İÇERİK</b></label>
        @Html.TextAreaFor(k => k.ICERIK, new { @class = "form-control" })
        <br />
        <label><b>TARİH</b></label>
        @Html.TextBoxFor(k => k.TARIH, new { @class = "form-control" })
        <br />
    </div>
    <div>
        <button class="btn btn-warning text-white">Duyuru Güncelle</button>
    </div>
}

