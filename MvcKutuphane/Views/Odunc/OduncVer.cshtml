@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div style="margin-top:15px"></div>
<h2>Ödünç Kitap Verme</h2>
<hr />
<div style="margin-top:15px"></div>
<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label><b>ÜYE</b></label>
        @*@Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.TBLUYELER.ID,(List<SelectListItem>)
   ViewBag.dgr1,new {@class="form-control"})
    </div>
    <div style="margin-top:15px">
        <label><b>KİTAP</b></label>
        @*@Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.TBLKITAP.ID,(List<SelectListItem>)
   ViewBag.dgr2,new {@class="form-control"})
    </div>
    <div style="margin-top:15px">
        <label><b>PERSONEL</b></label>
        @*@Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.PERSONEL,(List<SelectListItem>)
   ViewBag.dgr3,new {@class="form-control"})
    </div>
    <div style="margin-top:15px">
        <label><b>KİTAP ALIŞ TARİHİ</b></label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label><b>KİTAP İADE TARİHİ</b></label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        @*<button class="btn btn-primary" style="background-color:#a330b5; color:white">Kitabı Ödünç Ver</button>*@
        <button class="btn btn-primary">Kitabı Ödünç Ver</button>
        <input type="hidden" value="false" name="ISLEMDURUM" />
    </div>
</form>

