@using MvcKutuphane.Models.Entity;
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div style="margin-top:15px"></div>
<h2>Personeller</h2>
<hr/>
<div style="margin-top:15px"></div>
<table class="table table-bordered table-striped">
    <tr style="background-color:#e6e6fa">
        <th>PERSONEL ID</th>
        <th>PERSONEL ADI</th>
        <th></th>
        <th></th>
    </tr>
   @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.ID</td>
            <td>@prs.PERSONEL</td>
            <td><a href="/Personel/PersonelSil/@prs.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@prs.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Yeni Personel Ekle</a>

