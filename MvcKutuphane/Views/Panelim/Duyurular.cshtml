@using MvcKutuphane.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<div style="margin-top:15px"></div>
<h2>Duyurular</h2>
<hr />
<div style="margin-top:15px"></div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>KONU</th>
            <th>TARİH</th>
            <th>İÇERİK</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var dyr in Model)
        {
        <tr>
            <td>@dyr.KONU</td>
            <td>@Convert.ToDateTime(dyr.TARIH).ToString("dd/MM/yyyy")</td>
            <td>@dyr.ICERIK</td>
        </tr>
        }
    </tbody>
</table>

