@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div style="margin-top:15px"></div>
<h2>Yazarlar</h2>
<hr/>
<div style="margin-top:15px"></div>
<table class="table table-bordered table-striped">
    <tr style="background-color:#e6e6fa">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>@Html.ActionLink("Sil", "Yazarsil", new { id = y.ID }, new { @class = "btn btn-danger", onclick="return confirm('Silmek İstiyor Musunuz?')"})</td>
            <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-warning text-white">Yazar Kitapları</a></td>
        </tr>
    }
</table>
<div>
    <a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>
</div>
<br />


