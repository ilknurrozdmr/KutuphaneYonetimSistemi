@using MvcKutuphane.Models.Entity;
@model List<TBLKITAP>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div style="margin-top:15px"></div>
<h3><em>Yazar: @ViewBag.y1</em></h3>
<hr />
<div style="margin-top:15px"></div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kitap adı</th>
            <th>Kategori</th>
            <th>Yayınevi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.AD</td>
                <td>@x.TBLKATEGORI.AD</td>
                <td>@x.YAYINEVI</td>
            </tr>
        }
    </tbody>
</table>

