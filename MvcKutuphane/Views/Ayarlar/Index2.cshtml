@using MvcKutuphane.Models.Entity
@model List<TBLADMIN>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<div style="margin-top:15px"></div>
<h2>Yetkililer</h2>
<hr />
<div style="margin-top:15px"></div>
<table class="table table-bordered">
    <tr style="background-color:#e6e6fa">
        <th>ID</th>
        <th>KULLANICI</th>
        <th>YETKİ</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KULLANICI</td>
            <td>@item.YETKI</td>
            <td>
                <a class="btn btn-danger" href="/Ayarlar/AdminSil/@item.ID">
                    Sil
                </a>    
            </td>
            <td>
                <a class="btn btn-success" href="/Ayarlar/AdminGuncelle/@item.ID">
                    Düzenle
                </a>
            </td>
        </tr>
    }
</table>
<br />
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Admin Ekleme Paneli</h2>
            </div>
            <form method="post" action="/Ayarlar/YeniAdmin/">
                <div class="modal-body">
                    <label><b>KULLANICI ADI</b></label>
                    <input type="text" name="KULLANICI" class="form-control" />
                    <br />
                    <label><b>ŞİFRE</b></label>
                    <input type="text" name="SIFRE" class="form-control" />
                    <br />
                    <label><b>YETKİ</b></label>
                    <input type="text" name="YETKI" class="form-control" />
                    <br />
                    <button class="btn btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

