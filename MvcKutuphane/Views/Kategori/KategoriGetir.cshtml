@model MvcKutuphane.Models.Entity.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div style="margin-top:15px"></div>
<h2>Kategori Güncelle</h2>
<hr />
@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @*@Html.LabelFor(k => k.ID)*@
        <label><b>KATEGORİ ID</b></label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label><b>KATEGORİ ADI</b></label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        <br />
        <label><b>KATEGORİ DURUM</b></label>
        @Html.TextBoxFor(k => k.DURUM, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px"></div>
    <div>
        <button class="btn btn-warning text-white">Kategori Güncelle</button>
    </div>
}

