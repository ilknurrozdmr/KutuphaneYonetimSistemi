
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 200px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 17px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/Kategori/Index/"><i class="glyphicon glyphicon-list"></i>&nbsp; Kategoriler</a>
        <br /><a href="/Kitap/Index/"><i class="glyphicon glyphicon-book"></i>&nbsp; Kitaplar</a>
        <br /><a href="/Yazar/Index/"><i class="glyphicon glyphicon-pencil"></i>&nbsp; Yazarlar</a>
        <br /><a href="/Uye/Index/"><i class="glyphicon glyphicon-user"></i>&nbsp; Üyeler</a>
        <br /><a href="/Personel/Index/"><i class="glyphicon glyphicon-tower"></i>&nbsp; Personeller</a>
        @if (User.IsInRole("A"))
        {
            <br /><a href="/Odunc/OduncVer/"><i class="glyphicon glyphicon-circle-arrow-right"></i>&nbsp; Ödünç Kitap Ver</a>
            <br /><a href="/Odunc/Index/"><i class="glyphicon glyphicon-circle-arrow-left"></i>&nbsp; Ödünç Kitap Al</a>
        }
        <br /><a href="/Islem/Index/"><i class="glyphicon glyphicon-dashboard"></i>&nbsp; Kitap Hareketleri</a>
        <br /><a href="/Istatistik/Index/"><i class="glyphicon glyphicon-sort"></i>&nbsp; İstatistikler</a>
        <br /><a href="/Duyuru/Index/"><i class="glyphicon glyphicon-earphone"></i>&nbsp; Duyurular</a>
        <br /><a href="/Istatistik/HavaKart/"><i class="glyphicon glyphicon-cloud"></i>&nbsp; Hava Durumu</a>
        <br /><a href="/Istatistik/Galeri/"><i class="glyphicon glyphicon-picture"></i>&nbsp; Galeri</a>
        <br /><a href="/Vitrin/Index/"><i class="glyphicon glyphicon-gift"></i>&nbsp; Vitrin</a>
        <br /><a href="/Ayarlar/Index2/"><i class="glyphicon glyphicon-cog"></i>&nbsp; Ayarlar</a>
        <br /><a href="/Panelim/LogOut/"><i class="glyphicon glyphicon-remove-sign"></i>&nbsp; Çıkış</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>

