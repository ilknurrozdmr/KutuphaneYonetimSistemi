@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div style="margin-top:15px"></div>
<h2>Kitaplar</h2>
<hr/>
<div style="margin-top:15px"></div>
@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Kitabı Girin: </b> @Html.TextBox("p")
    <input type="submit" value="Ara" class="btn btn-primary btn-sm"/>
</div>
}


<div style="margin-top:15px"></div>
<table class="table table-bordered table-striped">
    <tr style="background-color:#e6e6fa">
        <th>ID</th>
        <th>KİTAP ADI</th>
        <th>KİTAP YAZARI</th>
        <th>KATEGORİSİ</th>
        <th>BASIM YILI</th>
        <th>YAYINEVİ</th>
        <th>SAYFA SAYISI</th>
        <th>DURUM</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var k in Model)
    {
    <tr>
        <td>@k.ID</td>
        <td>@k.AD</td>
        <td>@k.TBLYAZAR.AD&nbsp @k.TBLYAZAR.SOYAD</td>
        <td>@k.TBLKATEGORI.AD</td>
        <td>@k.BASIMYIL</td>
        <td>@k.YAYINEVI</td>
        <td>@k.SAYFA</td>
        <td>@k.DURUM</td>
        <td><a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success">Güncelle</a></td>
    </tr>
        }
</table>
<div>
    <a href="/Kitap/KitapEkle/" class="btn btn-primary">Yeni Kitap Ekle</a>
    <div>
        <br/>
    </div>
</div>


